<div class="panel panel-primary filterable">
	<div class="panel-heading">
		<div class="col-sm">
			<h1 class="panel-title display-4">Repuestos</h1>
		</div>
		<div class="col-sm col-lg-3">
			<!--input class="form-control" id="filtrar" type="text" placeholder="Buscar..."-->
			<div class="pull-right">
	            <button class="btn btn-default btn-sm btn-filter">
	            	<span class="glyphicon glyphicon-filter"></span> Filtrar
	            </button>
	        </div>
		</div>
	</div>
	<table class="table table-striped" style="vertical-align: middle,">
		<thead>
			<tr class="filters">
				<!--th>ID</th-->
				<th scope="col" style="width: 20%; text-align: center;"><input type="text" class="form-control" placeholder="Codigo" disabled></th>
				<th scope="col" style="width: 20%; text-align: center;"><input type="text" class="form-control" placeholder="Repuesto" disabled></th>
				<th scope="col" style="width: 20%; text-align: center;"><input type="text" class="form-control" placeholder="Tipo" disabled></th>
				<th scope="col" style="width: 20%; text-align: center;"><input type="text" class="form-control" placeholder="Marca" disabled></th>
				<th scope="col" colspan="2" style="width: 20%; text-align: center;" class="align-middle">Stock</th>
			</tr>
		</thead>
		<tbody id="tabla">
			<% piezas.forEach(function(pieza){ %>
				<tr style="vertical-align: middle">
					<!--td><%= pieza.id %></td-->
					<td class="align-middle" style="vertical-align: middle; text-align: center;"><%= pieza.codigo %></td>
					<td class="align-middle" style="vertical-align: middle; text-align: center;"><%= pieza.repuesto %></td>
					<td class="align-middle" style="vertical-align: middle; text-align: center;"><%= pieza.tipo %></td>
					<td class="align-middle" style="vertical-align: middle; text-align: center;"><%= pieza.marca %></td>
					<td class="align-middle" style="vertical-align: middle; text-align: center;"><%= pieza.cantidad %></td>
					<td class="align-bottom" style="vertical-align: middle; text-align: center;">
						<div class="container align-middle">
							<form method="post" action="/pieza/agregar/<%= pieza.id %>/" class="form-inline">
								<div class="input-group mb-2 mr-sm-2">
									<input type="number" class="form-control" name="cant">
								    <div class="input-group-prepend">
								      <button type="submit"class="btn btn-success mb-2 input-group-text">+</button>
								    </div>
								  </div>
								
							</form>
						</div>
						<!--form method="post" action="/pieza/delete/<%= pieza.id %>" class="d-inline">
							<input type="submit" value="Borrar" class="btn btn-danger">
						</form-->
					</td>
				</tr>
		<%})%>
		</tbody>
	</table>
</div>






